<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        >

    <ImageView
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/img_sp"
        android:layout_width="@dimen/home_pager_service_card_text"
        android:layout_height="@dimen/home_pager_service_card_text"
        android:src="@drawable/web_hi_res_512"
        android:scaleType="fitXY"
        android:contentDescription="" />

    <TextView
        android:layout_below="@+id/img_sp"
        android:gravity="center"
        android:layout_marginTop="@dimen/nav_drawer_margin"
        style="@style/TextStyle.Normal.Bold"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/app_name"
         />

    </RelativeLayout>


</RelativeLayout>

