<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/black_effective</item>
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:windowBackground">@color/bg_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24px</item>
    </style>

    <style name="AppThemeNoStatusBar" parent="AppTheme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="AppThemeFullScreen" parent="AppTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppThemeFullScreenActivity" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@color/white</item>
    </style>

    <style name="TextAppearance.Montserrat.Text.Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts_other/Montserrat-Bold.ttf</item>
    </style>

    <style name="TextAppearance.Montserrat.Text.Regular" parent="android:TextAppearance">
        <item name="fontPath">fonts_other/Montserrat-Regular.ttf</item>
    </style>

    <style name="TextAppearance.Text.Regular" parent="android:TextAppearance">
        <item name="fontPath">fonts/source-sans-pro/SourceSansPro-Regular.ttf</item>
    </style>

    <style name="TextAppearance.Text.Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/source-sans-pro/SourceSansPro-Bold.ttf</item>
    </style>

    <style name="TextAppearance.Text.Light" parent="android:TextAppearance">
        <item name="fontPath">fonts/source-sans-pro/SourceSansPro-Light.ttf</item>
    </style>

    <style name="TextAppearance.Text.Italic" parent="android:TextAppearance">
        <item name="fontPath">fonts/source-sans-pro/SourceSansPro-Italic.ttf</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_marginTop">@dimen/material_component_button_corner_radius</item>
        <item name="android:layout_marginBottom">@dimen/material_component_button_corner_radius
        </item>
        <item name="android:layout_marginLeft">@dimen/material_component_button_corner_radius</item>
        <item name="android:layout_marginRight">@dimen/material_component_button_corner_radius
        </item>
        <item name="android:textColor">@color/black_effective</item>
    </style>

    <!--TextStyle XXLarge -->
    <style name="TextStyle.XXLarge.Bold" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Montserrat.Text.Bold</item>
        <item name="android:textSize">@dimen/material_typography_display3</item>
    </style>

    <style name="TextStyle.XXLarge.Regular" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Montserrat.Text.Regular</item>
        <item name="android:textSize">@dimen/material_typography_display3</item>
    </style>

    <!--TextStyle XLarge -->
    <style name="TextStyle.XLarge.Bold" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Montserrat.Text.Bold</item>
        <item name="android:textSize">@dimen/material_typography_display2</item>
    </style>

    <style name="TextStyle.XLarge.Regular" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Montserrat.Text.Regular</item>
        <item name="android:textSize">@dimen/material_typography_display2</item>
    </style>

    <!--TextStyle Large -->
    <style name="TextStyle.Large.Bold" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Montserrat.Text.Bold</item>
        <item name="android:textSize">@dimen/material_typography_display1</item>
    </style>

    <style name="TextStyle.Large.Regular" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Montserrat.Text.Regular</item>
        <item name="android:textSize">@dimen/material_typography_display1</item>
    </style>

    <!--TextStyle XMedium -->
    <style name="TextStyle.XMedium.Bold" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Montserrat.Text.Bold</item>
        <item name="android:textSize">@dimen/material_typography_headline</item>
    </style>

    <style name="TextStyle.XMedium.Regular" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Montserrat.Text.Regular</item>
        <item name="android:textSize">@dimen/material_typography_headline</item>
    </style>

    <!--TextStyle  Medium-->
    <style name="TextStyle.Medium.Bold" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Montserrat.Text.Bold</item>
        <item name="android:textSize">@dimen/material_typography_subheading</item>
    </style>

    <style name="TextStyle.Medium.Regular" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Montserrat.Text.Regular</item>
        <item name="android:textSize">@dimen/material_typography_subheading</item>
    </style>

    <!--TextStyle  Normal-->
    <style name="TextStyle.Normal.Bold" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Montserrat.Text.Bold</item>
        <item name="android:textSize">@dimen/material_typography_body1</item>
    </style>

    <style name="TextStyle.Normal.Regular" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Montserrat.Text.Regular</item>
        <item name="android:textSize">@dimen/material_typography_body1</item>
    </style>

    <!--TextStyle  XSmall-->
    <style name="TextStyle.XSmall.Bold" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Montserrat.Text.Bold</item>
        <item name="android:textSize">@dimen/material_typography_small_body1</item>
    </style>

    <style name="TextStyle.XSmall.Regular" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Montserrat.Text.Regular</item>
        <item name="android:textSize">@dimen/material_typography_small_body1</item>
    </style>

    <!--TextStyle  Small-->
    <style name="TextStyle.Small.Bold" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Montserrat.Text.Bold</item>
        <item name="android:textSize">@dimen/material_typography_small_body2</item>
    </style>

    <style name="TextStyle.Small.Regular" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Montserrat.Text.Regular</item>
        <item name="android:textSize">@dimen/material_typography_small_body2</item>
    </style>

    <!--TextStyle  Smaller-->
    <style name="TextStyle.Smaller.Bold" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Montserrat.Text.Bold</item>
        <item name="android:textSize">@dimen/material_typography_small_body3</item>
    </style>

    <style name="TextStyle.Smaller.Regular" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Montserrat.Text.Regular</item>
        <item name="android:textSize">@dimen/material_typography_small_body3</item>
    </style>

    <!--TextStyle  Smallest-->
    <style name="TextStyle.Smallest.Bold" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Montserrat.Text.Bold</item>
        <item name="android:textSize">@dimen/material_typography_small_body4</item>
    </style>

    <style name="TextStyle.Smallest.Regular" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Montserrat.Text.Regular</item>
        <item name="android:textSize">@dimen/material_typography_small_body4</item>
    </style>


    <style name="TextStyle.Title" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="TextStyle.Title.Sub" parent="TextStyle.Title">
        <item name="android:textAppearance">@style/TextAppearance.Text.Light</item>
        <item name="android:textSize">@dimen/material_typography_caption</item>
    </style>

    <style name="TextStyle.Heading" parent="TextStyle">
        <item name="android:textSize">@dimen/material_typography_body1</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>
    </style>

    <style name="TextStyle.Comment" parent="TextStyle">
        <item name="android:textSize">@dimen/material_typography_body1</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Italic</item>
    </style>

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextStyle.Heading">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/material_typography_title</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:layout_height">@dimen/material_layout_vertical_spacing_subtitle</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">
            @dimen/material_component_text_fields_floating_label_padding_between_label_and_input_text
        </item>
        <item name="android:paddingRight">
            @dimen/material_component_text_fields_floating_label_padding_between_label_and_input_text
        </item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/material_typography_body1</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="Button.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:padding">@dimen/material_layout_button_padding</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_primary_bg</item>
    </style>

    <style name="Button.Secondary" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_secondary_bg</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextStyle.EditText" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="Button.Action.Positive" parent="Button">
        <item name="android:textColor">@drawable/button_positive_text_drawable</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Button.Action.Negative" parent="Button">
        <item name="android:textColor">@drawable/button_negative_text_drawable</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/material_typography_body1</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="AppTab" parent="Widget.Design.TabLayout">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="tabTextAppearance">@style/AppTab.TextAppearance</item>
        <item name="tabIndicatorHeight">@dimen/material_component_button_corner_radius</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="AppTab.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/material_typography_body1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Button.Primary.Quiz.Empty" parent="Button.Primary">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/button_primary_bg</item>
    </style>

    <style name="AppTheme.Template.Base" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">#5f8ee4</item>
        <item name="colorPrimaryDark">#5f8ee4</item>
        <item name="colorAccent">#6CC887</item>
        <item name="actionMenuTextColor">#6CC887</item>

    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">

        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@android:color/white</item>

    </style>

</resources>
